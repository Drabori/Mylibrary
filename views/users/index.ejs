<!--views\users\index.ejs-->
<a href="/admin">Home</a>
<h2>Search Users</h2>

<form action="/users" method="GET">
  <label>Name</label>
  <input type="text" name="name" value="<%= searchOptions.name %>" />
  <button type="submit">Search</button>
</form>
<br />

<!-- Exibir cada user-->
<% users.forEach (user => { %>
<div><%= user.name %></div>
<a href="/users/<%= user.id %>">View</a>
<a href="/users/<%= user.id %>/edit">Edit</a>
<%- include("../partials/deleteForm", { url: `/users/${user.id}` }) %>
 <% }) %>
<!--Vai incluir o partials em deleteForm e vamos mandar nos o url-->